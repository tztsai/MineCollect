# Database Configuration
# Use either DATABASE_URL or individual components

# Option 1: Database URL (recommended for production)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/minecollect

# Option 2: Individual components (for development)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=minecollect

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# AI Services
OPENAI_API_KEY=your_openai_api_key_here

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379

# Security (generate secure random strings)
SECRET_KEY=your_secret_key_here

# Logging
LOG_LEVEL=info

# File Storage
STORAGE_PATH=/var/minecollect/files 